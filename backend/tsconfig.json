{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@models/*": ["src/models/*"],
            "@config/*": ["src/config/*"],
            "@utils/*": ["src/utils/*"],
            "@middleware/*": ["src/middleware/*"],
            "@routes/*": ["src/routes/*"],
            "@constants/*": ["src/constants/*"],
            "@types/*": ["src/types/*"]
        },
        "allowJs": false,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
